{
	"name": "miraheze/ts-portal",
	"type": "project",
	"description": "Portal for handling and managing the investigation lifecycle for Trust and Safety at the WikiTide Foundation",
	"license": "MIT",
	"require": {
		"php": "^8.4",
		"ext-json": "*",
		"ext-pdo": "*",
		"guzzlehttp/guzzle": "7.10.0",
		"laravel/framework": "12.48.1",
		"laravel/sanctum": "4.2.4",
		"laravel/serializable-closure": "2.0.8",
		"laravel/socialite": "5.24.2",
		"laravel/tinker": "2.11.0",
		"doctrine/dbal": "^4.4",
		"taavi/laravel-socialite-mediawiki": "1.6.0"
	},
	"require-dev": {
		"fakerphp/faker": "1.24.1",
		"mockery/mockery": "1.6.12",
		"nunomaduro/collision": "^8.6",
		"phpunit/phpunit": "12.5.7",
		"mediawiki/mediawiki-codesniffer": "49.0.0",
		"mediawiki/minus-x": "2.0.1",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/",
			"Database\\Factories\\": "database/factories/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover --ansi"
		],
		"post-update-cmd": [
			"@php artisan vendor:publish --tag=laravel-assets --ansi",
			"@php artisan config:cache",
			"@php artisan route:cache",
			"@php artisan view:cache"
		],
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"@php artisan key:generate --ansi"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf; if [ $? -eq 1 ]; then exit 0; fi"
		],
		"test": [
			"parallel-lint . --exclude node_modules --exclude vendor",
			"minus-x check .",
			"@phpcs"
		],
		"phpcs": "phpcs -sp --cache"
	},
	"extra": {
		"laravel": {
			"dont-discover": []
		}
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
