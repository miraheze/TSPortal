{
	"name": "miraheze/ts-portal",
	"type": "project",
	"description": "Portal for handling and managing the investigation lifecycle for Trust and Safety at the WikiTide Foundation",
	"license": "MIT",
	"require": {
		"php": "^8.4",
		"ext-json": "*",
		"ext-pdo": "*",
		"fakerphp/faker": "1.24.1",
		"guzzlehttp/guzzle": "7.10.0",
		"laravel/framework": "12.46.0",
		"laravel/sanctum": "4.2.2",
		"laravel/serializable-closure": "2.0.7",
		"laravel/socialite": "5.24.1",
		"laravel/tinker": "2.11.0",
		"doctrine/dbal": "^4.2",
		"taavi/laravel-socialite-mediawiki": "1.6.0",
		"phpunit/phpunit": "12.5.4",
		"mockery/mockery": "1.6.12"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/",
			"Database\\Factories\\": "database/factories/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover --ansi"
		],
		"post-update-cmd": [
			"@php artisan vendor:publish --tag=laravel-assets --ansi",
			"@php artisan config:cache",
			"@php artisan route:cache",
			"@php artisan view:cache"
		],
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"@php artisan key:generate --ansi"
		]
	},
	"extra": {
		"laravel": {
			"dont-discover": []
		}
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
